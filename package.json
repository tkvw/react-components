        "build:react-material-image": "rimraf ./packages/react-material-image/build && cross-env NODE_ENV=production babel ./packages/react-material-image/src -d ./packages/react-material-image/build --ignore **/*.spec.js,**/*.stories.js",
        "build:react-material-fileinput": "rimraf ./packages/react-material-fileinput/build && cross-env NODE_ENV=production babel ./packages/react-material-fileinput/src -d ./packages/react-material-fileinput/build --ignore **/*.spec.js,**/*.stories.js",
        "build:redux-middleware-store-proxy": "rimraf ./packages/redux-middleware-store-proxy/build && cross-env NODE_ENV=production babel ./packages/redux-middleware-store-proxy/src -d ./packages/redux-middleware-store-proxy/build --ignore **/*.spec.js,**/*.stories.js",
        "build:redux-override-reducer": "rimraf ./packages/redux-override-reducer/build && cross-env NODE_ENV=production babel ./packages/redux-override-reducer/src -d ./packages/redux-override-reducer/build --ignore **/*.spec.js,**/*.stories.js",
        "build:sparse-updates": "rimraf ./packages/sparse-updates/build && cross-env NODE_ENV=production babel ./packages/sparse-updates/src -d ./packages/sparse-updates/build --ignore **/*.spec.js,**/*.stories.js",
        "build:all": "yarn run build:flatten-object && yarn run build:redux-middleware-store-proxy && yarn run build:sparse-updates && yarn run build:react-image && yarn run build:redux-override-reducer && yarn run build:react-material-image && yarn run build:react-cropperjs && yarn run build:react-material-cropperjs && yarn run build:react-image-transformation && yarn run build:react-material-fileinput && yarn run build:react-admin",
        "publish:all": "yarn run build:all && lerna publish --skip-git",
        "storybook": "start-storybook -p 9001 -s ./.storybook/public -c .storybook",
        "run:simple": "cd examples/simple && ./node_modules/.bin/webpack-dev-server --hot --inline --config ./webpack.config.js"
    },
