    "scripts": {
        "build:flatten-object": "rimraf ./packages/flatten-object/build && cross-env NODE_ENV=production babel ./packages/flatten-object/src -d ./packages/flatten-object/build --ignore **/*.spec.js,**/*.stories.js",
        "build:react-admin": "rimraf ./packages/react-admin/build && cross-env NODE_ENV=production babel ./packages/react-admin/src -d ./packages/react-admin/build --ignore **/*.spec.js,**/*.stories.js",
