{
    "private": true,
    "name": "react-components-lerna",
    "jest": {
        "setupTestFrameworkScriptFile": "./test-setup.js"
    },
    "scripts": {
        "build:react-image-transformation": "rimraf ./packages/react-image-transformation/build && cross-env NODE_ENV=production babel ./packages/react-image-transformation/src -d ./packages/react-image-transformation/build --ignore **/*.spec.js,**/*.stories.js",
        "yalc:react-image-transformation":"yarn run build:react-image-transformation && yalc publish ./packages/react-image-transformation",
        "build:react-cropperjs": "rimraf ./packages/react-cropperjs/build && cross-env NODE_ENV=production babel ./packages/react-cropperjs/src -d ./packages/react-cropperjs/build --ignore **/*.spec.js,**/*.stories.js",
        "yalc:react-cropperjs":"yarn run build:react-cropperjs && yalc publish ./packages/react-cropperjs",
        "build:react-material-cropperjs": "rimraf ./packages/react-material-cropperjs/build && cross-env NODE_ENV=production babel ./packages/react-material-cropperjs/src -d ./packages/react-material-cropperjs/build --ignore **/*.spec.js,**/*.stories.js",
        "yalc:react-material-cropperjs":"yarn run build:react-material-cropperjs && yalc publish ./packages/react-material-cropperjs",
        "build:react-material-file-input": "rimraf ./packages/react-material-file-input/build && cross-env NODE_ENV=production babel ./packages/react-material-file-input/src -d ./packages/react-material-file-input/build --ignore **/*.spec.js,**/*.stories.js",
        "yalc:react-material-file-input":"yarn run build:react-material-file-input && yalc publish ./packages/react-material-file-input",
        "build:all":"yarn run build:react-cropperjs && yarn run build:react-material-cropperjs && yarn run build:react-image-transformation && yarn run build:react-material-file-input",
        "yalc:all":"yarn run yalc:react-cropperjs && yarn run yalc:react-material-cropperjs && yarn run yalc:react-image-transformation && yarn run yalc:react-material-file-input",
        "storybook": "start-storybook -p 9001 -s ./.storybook/public -c .storybook"
    },
    "devDependencies": {
        "@babel/cli": "^7.0.0-beta.39",
        "@babel/core": "^7.0.0-beta.39",
        "@babel/plugin-proposal-class-properties": "^7.0.0-beta.39",
        "@babel/preset-env": "^7.0.0-beta.39",
        "@babel/preset-react": "^7.0.0-beta.39",
        "@storybook/addon-info": "^3.3.11",
        "@storybook/addon-knobs": "^3.3.11",
        "@storybook/addon-options": "^3.3.11",
        "@storybook/addon-storyshots": "^3.3.11",
        "@storybook/react": "^3.3.11",
        "babel-core": "^7.0.0-bridge.0",
        "babel-eslint": "^8.2.1",
        "babel-jest": "^22.1.0",
        "cross-env": "^5.1.3",
        "enzyme": "~3.1.0",
        "enzyme-adapter-react-16": "~1.0.1",
        "eslint": "^4.16.0",
        "eslint-config-prettier": "^2.9.0",
        "eslint-plugin-import": "^2.8.0",
        "eslint-plugin-prettier": "^2.5.0",
        "eslint-plugin-react": "^7.6.1",
        "jest": "^22.1.4",
        "lerna": "^2.6.0",
        "prettier": "^1.10.2",
        "prettier-eslint-cli": "^4.7.0",
        "react": "~16.0.0",
        "react-dom": "~16.0.0",
        "react-test-renderer": "~16.0.0",
        "recompose": "^0.26.0",
        "rimraf": "^2.6.2",
        "shx": "^0.2.2"
    },
    "workspaces": [
        "packages/*"
    ]
